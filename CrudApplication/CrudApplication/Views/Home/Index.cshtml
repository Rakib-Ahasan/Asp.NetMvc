@model IEnumerable<CrudApplication.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p style="color: green">@TempData["InsertMessage"]</p>
<p style="color: green">@TempData["UpdateMessage"]</p>
<p style="color: green">@TempData["DeleteMessage"]</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeContact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeDateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeePayableAmount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeContact)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeDateOfBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeePayableAmount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EmployeeId }) |
            @Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EmployeeId })
        </td>
    </tr>
}

</table>
